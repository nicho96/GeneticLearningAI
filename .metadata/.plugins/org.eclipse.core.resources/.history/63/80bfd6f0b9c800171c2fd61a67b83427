package ca.nicho.nerual;

import ca.nicho.Board;
import ca.nicho.neuralnet.NeuralNetwork;

public class ComplexNetworkController extends NetworkController {

	public ComplexNetworkController(NeuralNetwork network, Board board) {
		super(network, board);
	}

	public void readInputs(){
		int[][] values = board.toIntArray();
		int ind = 0;
		for(int x = 0; x < values.length; x++){
			for(int y = 0; y < values[0].length; y++){
				int offset = values[x][y];
				network.inputsArr.get(ind * NeuralEvolver.BOARD_SIZE + offset).value = 1;
				ind++;
			}
		}
	}
	
}
