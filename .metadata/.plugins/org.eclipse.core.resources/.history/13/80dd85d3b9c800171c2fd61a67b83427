package ca.nicho.nerual;

import ca.nicho.Board;
import ca.nicho.neuralnet2.NeuralNetwork2;

public class SimpleNetworkController extends NetworkController {

	public SimpleNetworkController(NeuralNetwork2 network, Board board) {
		super(network, board);
	}

	public void readInputs(){
		int[][] values = board.toIntArray();
		int ind = 0;
		double max = board.getMaxPiece();
		for(int x = 0; x < values.length; x++){
			for(int y = 0; y < values[0].length; y++){
				network.neuronsArr.get(ind).value = values[x][y] / max;
				ind++;
			}
		}
	}
	
}
